<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing4"
    tools:context="com.example.mrgan.design.PracticeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:text="返回"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/questionnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="right"
                android:text="1"
                android:visibility="invisible"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="left"
                android:text="/50题"
                android:visibility="invisible"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:text="跳过"
                android:textSize="22sp" />
        </LinearLayout>

        <TextView
                android:id="@+id/last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42sp"
                android:layout_gravity="center"
                android:text=""
                android:textSize="40sp"
                android:textColor="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="30dp"
            android:background="#8087DEFA"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100+100="
                android:textSize="45sp" />

            <EditText
                android:id="@+id/answer"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text=""
                android:inputType="number"
                android:background="@drawable/fangkuang3"
                android:textSize="45sp"
                />

            <ImageView
                android:id="@+id/judge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/xie2" />
        </LinearLayout>

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_gravity="center"
            android:text="7+8=?"
            android:textSize="40sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>